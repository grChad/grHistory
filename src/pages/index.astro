---
import '@styles/global.css'
import BaseLayout from '../layouts/BaseLayout.astro'
import BlogPost from '@components/BlogPost.astro'
const pageTitle = 'pagina de Inicio'

const allPosts = await Astro.glob('./posts/*.mdx')
---

<BaseLayout pageTitle={pageTitle}>
	<main class="my-12">
		<p>
			Lorem ipsum dolor sit amet, qui minim labore adipisicing minim sint cillum sint
			consectetur cupidatat.
		</p>
		<ul>
			{allPosts.map((post) => <BlogPost url={post.url} title={post.frontmatter.title} />)}
		</ul>
	</main>
	<div class="bg-blue-700/50 h-24 grid place-content-center">
		<h2 class="Iam">¿Quién soy?</h2>
	</div>
	<section class="max-w-[1000px] mx-auto p-8 text-start">
		<div class="my-8 flex flex-wrap justify-center gap-4">
			<article class="max-w-48 border border-gray-500 rounded-xl p-2 bg-white/40">
				<h3 class="text-white/90 font-bold mb-2">App ThiagoSilabo</h3>
				<p class="text-sm italic text-pretty mb-2 text-black">
					Una App android, para operaciones matematicas basicas.
				</p>
				<img src="../../assets/images/image-app.png" class="rounded-md" />
			</article>
		</div>
	</section>
</BaseLayout>

<style>
	.Iam {
		@apply text-white/80 font-bold text-5xl;
		filter: drop-shadow(0 0 3px black);
	}
</style>
